# Application Configuration
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# Kismet Server Configuration
KISMET_HOST=http://192.168.0.128
KISMET_PORT=2501
KISMET_API_KEY=your_kismet_api_key_here

# Performance Settings (optimized for Raspberry Pi)
NODE_OPTIONS=--max-old-space-size=512

# Optional: Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Optional: SSL Configuration (if using HTTPS)
SSL_CERT_PATH=./docker/ssl/cert.pem
SSL_KEY_PATH=./docker/ssl/key.pem